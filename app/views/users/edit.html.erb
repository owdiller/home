<h1>Editing Note #<%= @user.id %></h1>
<style>
  h1{
    color:red;
  }
  </style>
<form action="/users/<%= @user.id %>/update">
  <div>
    <label for="name">name</label><br />
    <input id="name" name="name" value="<%= @user.name  %>" type="text" />
  </div>
  <div>
    <label for="date">date</label><br />
    <input id="date" name="date" value="<%= @user.date  %>" type="text" />
  </div>
  <div>
    <label for="note">note</label><br />
    <input id="note" name="note" value="<%= @user.note  %>" type="text" />
  </div>
  <br>
  <br>

  <div>
    <input type="submit">
  </div>
</form>


